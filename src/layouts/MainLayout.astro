---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Información profesional sobre prácticas odontológicas modernas." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Info Odontología</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-slate-50 text-slate-900 font-sans flex flex-col min-h-screen selection:bg-primary-200 selection:text-primary-900">
        <header class="bg-white/80 backdrop-blur-md shadow-sm sticky top-0 z-50 border-b border-slate-100">
            <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
                <a href={import.meta.env.BASE_URL} class="text-2xl font-bold text-primary-600 flex items-center gap-2 hover:text-primary-700 transition-colors">
                    <span class="text-3xl">Dr. Ramiro Federico Herrera</span>
                </a>
                <ul class="hidden md:flex space-x-8 text-sm font-medium text-slate-600">
                    <li><a href={import.meta.env.BASE_URL} class="hover:text-primary-600 transition-colors">Inicio</a></li>
                    <li><a href={`${import.meta.env.BASE_URL}#practicas`} class="hover:text-primary-600 transition-colors">Prácticas</a></li>
                    <li><a href={`${import.meta.env.BASE_URL}#contacto`} class="hover:text-primary-600 transition-colors">Contacto</a></li>
                </ul>
            </nav>
        </header>

		<main class="flex-grow">
			<slot />
		</main>

        <footer class="bg-gray-900 text-slate-300 py-12 mt-auto">
            <div class="container mx-auto px-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                    <div class="text-left">
                        <h3 class="text-white font-bold text-lg mb-4">Ramiro Federico Herrera</h3>
                        <h2>Contacto</h2>
                        <p class="text-slate-400 text-sm"><a href="https://wa.me/543874558410" class="hover:text-white transition-colors">387 455-8410</a></p>
                    </div>
                    <div class="text-right">
                        <h3 class="text-white font-bold text-lg mb-4">Desarrollo</h3>
                        <p class="text-slate-400 text-sm"><a href="https://github.com/Pekzer" class="hover:text-white transition-colors">Pekzer</a></p>
                        <p class="text-slate-400 text-sm"><a href="mailto:herreragonzalodev@gmail.com" class="hover:text-white transition-colors">herreragonzalodev@gmail.com</a></p>
                    </div>
                </div>

            </div>
        </footer>
	</body>
</html>
